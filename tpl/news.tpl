<article class="post">
	<h3 class="title"><a href="?full=[_id]">[_title]</a></h3>
	<div class="text">
	[_text]
	</div>
	<div class="clrpost"></div>
	<div class="autor">Автор: [_author] | [_date_b]</div>
	[_while]
